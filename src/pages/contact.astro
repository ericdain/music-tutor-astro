---
import BaseLayout from "../Layouts/BaseLayout.astro";
---

<BaseLayout title="Contact">
    <div class="container">
        <h1>Contact Me</h1>
        <p>
        Ready to start your musical journey? Fill out the form below to inquire
        about lesson availability and scheduling.
        </p>

        <form class="contact-form">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required />
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
            <label for="instrument">Instrument of Interest</label>
            <select id="instrument" name="instrument">
            <option>Piano</option>
            <option>Clarinet</option>
            <option>Drums</option>
            <option>Guitar</option>
            </select>
        </div>
        <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="5" required></textarea>
        </div>
        <button type="submit">Send Inquiry</button>
        </form>
        <p class="form-note">
        <strong>Note:</strong> This is a demo form. For a real site, you would
        need to connect this to a service like Netlify Forms, Formspree, or a
        custom backend to actually receive messages.
        </p>
    </div>
    </BaseLayout>

    <style>
    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .form-group {
        display: flex;
        flex-direction: column;
    }
    .form-group label {
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }
    .form-group input,
    .form-group select,
    .form-group textarea {
        padding: 0.75rem;
        border-radius: 4px;
        border: none;
        background: #444;
        color: white;
        font-size: 1rem;
    }
    button {
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        border: none;
        background-color: rgb(var(--accent));
        color: white;
        font-weight: bold;
        font-size: 1rem;
        cursor: pointer;
        align-self: flex-start;
    }
    .form-note {
        margin-top: 2rem;
        font-size: 0.9rem;
        background-color: #333;
        padding: 1rem;
        border-radius: 4px;
    }
</style>