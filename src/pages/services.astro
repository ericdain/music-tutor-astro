---
import BaseLayout from "../Layouts/BaseLayout.astro";
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Services">
    <div class="container">
        <h1>Lessons & Services</h1>
        <p>
        I offer private lessons for the following instruments. All lessons are 30
        or 60 minutes and take place in my home studio.
        </p>

        <div class="service-grid">
        <div class="card">
            <img src={`${base}/images/piano.jpg`} alt="A grand piano" />
            <h3>Piano Lessons</h3>
            <p>
            For all ages and skill levels. Learn classical foundations, chord
            progressions, and how to read music.
            </p>
        </div>
        <div class="card">
            <img src={`${base}/images/clarinet.jpg`} alt="A clarinet" />
            <h3>Clarinet Lessons</h3>
            <p>
            Focus on tone, technique, and repertoire for school band or personal
            enjoyment.
            </p>
        </div>
        <div class="card">
            <img src={`${base}/images/drums.jpg`} alt="A drum kit" />
            <h3>Drum Lessons</h3>
            <p>
            Master rhythm, timing, and coordination. From basic beats to complex
            fills, all styles covered.
            </p>
        </div>
        <div class="card">
            <img src={`${base}/images/guitar.jpg`} alt="An acoustic guitar" />
            <h3>Guitar Lessons</h3>
            <p>
            Acoustic or electric. Learn your favorite songs, master chords, and
            start improvising.
            </p>
        </div>
        </div>
    </div>
    </BaseLayout>

    <style>
    .service-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }
    .card {
        background: #333;
        border-radius: 8px;
        overflow: hidden;
    }
    .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 0;
    }
    .card h3,
    .card p {
        padding: 0 1rem;
    }
    .card p {
        padding-bottom: 1rem;
        font-size: 0.9rem;
    }
</style>