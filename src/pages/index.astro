---
import BaseLayout from "../Layouts/BaseLayout.astro";
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Home">
	<div class="hero">
		<div class="hero-text">
		<h1>Unlock Your Musical Potential</h1>
		<p>
			Private, one-on-one music lessons tailored to your goals. From your
			first note to your first masterpiece.
		</p>
		<a href={`${base}/contact`} class="cta-button">Book a Lesson</a>
		</div>
		<img
		src={`${base}/images/hero-music.jpg`}
		alt="A beautiful piano in a well-lit room"
		width="1200"
		height="800"
		/>
	</div>
	</BaseLayout>

	<style>
	.hero {
		text-align: center;
		padding: 0;
	}
	.hero-text {
		background-color: #23262d;
		padding: 2rem;
		border-radius: 8px;
		margin-bottom: 2rem;
	}
	.cta-button {
		display: inline-block;
		background-color: rgb(var(--accent));
		color: white;
		padding: 0.75rem 1.5rem;
		border-radius: 4px;
		text-decoration: none;
		font-weight: bold;
		margin-top: 1rem;
	}
</style>